<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@android:style/Widget.Holo.Light.Button</item>
        <item name="android:editTextStyle">@android:style/Widget.Holo.Light.EditText</item>
    </style>

    <style name="ChatTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>

    <style name="SettingsTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@android:style/Widget.Holo.ActionBar.Solid</item>
    </style>

</resources>
